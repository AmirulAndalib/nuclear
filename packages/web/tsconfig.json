{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": ["../../node_modules/@types", "typings"]
  },
  "include": ["src", "node_modules/@nuclear"]
}
